{
    "firstName": "FIRSTNAME",
    "lastName":  "LASTNAME",
    "email":     "email@email.com",
    "password": "asdfasdf"
}
' -v


curl -X POST http://localhost:9000/signin -H 'Content-Type: application/json' -d '
{
	"email": "email@email.com", 
	"password": "asdfasdf"
}
' -v

